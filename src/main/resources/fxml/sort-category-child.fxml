<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<HBox spacing="10" xmlns:fx="javafx">
    <VBox spacing="10">
        <Button text="上移" onAction="#moveUp">
            <graphic>
                <ImageView fitWidth="16" fitHeight="16">
                    <Image url="@/icons/up.png"/>
                </ImageView>
            </graphic>
        </Button>
        <Button text="下移" onAction="#moveDown">
            <graphic>
                <ImageView fitWidth="16" fitHeight="16">
                    <Image url="@/icons/down.png"/>
                </ImageView>
            </graphic>
        </Button>
        <Pane prefHeight="10"/>
        <Button text="置顶" onAction="#moveTop">
            <graphic>
                <ImageView fitWidth="16" fitHeight="16">
                    <Image url="@/icons/up-top.png"/>
                </ImageView>
            </graphic>
        </Button>
        <Button text="置底" onAction="#moveBottom">
            <graphic>
                <ImageView fitWidth="16" fitHeight="16">
                    <Image url="@/icons/down-bottom.png"/>
                </ImageView>
            </graphic>
        </Button>
    </VBox>
    <ListView HBox.hgrow="ALWAYS" fx:id="lvCategories"/>
</HBox>